{% extends 'email/layout.html.twig' %}

{% block title 'Zen Unicorn - Nouvelles photos' %}
{% block body_title 'Zen Unicorn' %}

{% block content %}
    <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="vertical-align:top;" width="100%">
        <tr>
            <td align="center" style="font-size:0px;padding:10px 25px;word-break:break-word;">
                <div style="font-family:'Open Sans', sans-serif;font-size:20px;font-weight:bold;line-height:20px;text-align:center;text-transform:uppercase;color:#fcd0d1;">
                    {{- 'Il y a des nouvelles photos' -}}
                </div>
            </td>
        </tr>
        <tr>
            <td align="center" style="font-size:0px;padding:10px 25px;word-break:break-word;">
                <div style="font-family:'Open Sans', sans-serif;font-size:16px;line-height:20px;text-align:center;color:#986588;">
                    {{- 'Viens vite voir les nouvelles photos. Elles viennent tout juste d\'arriver et elles sont trop belles !' -}}
                </div>

            </td>
        </tr>
        <tr>
            <td align="center" style="font-size:0px;padding:10px 25px;word-break:break-word;">
                <div style="font-family:'Open Sans', sans-serif;font-size:20px;font-weight:bold;line-height:20px;text-align:center;text-transform:uppercase;color:#fcd0d1;">
                    {{- '&nbsp;' -}}
                </div>
            </td>
        </tr>
        <tr>
            <td align="center" vertical-align="middle" style="font-size:0px;padding:10px 25px;word-break:break-word;">
                <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" style="border-collapse:separate;line-height:100%;">
                    <tr>
                        <td align="center" bgcolor="#f57bb1" role="presentation" style="border:none;border-radius:3px;color:#ffffff;cursor:auto;height:30px;padding:10px 25px;" valign="middle">
                            <a href="{{ url('home') }}" style="background:#f57bb1;color:#ffffff;font-family:Ubuntu, Helvetica, Arial, sans-serif;font-size:16px;font-weight:normal;line-height:120%;Margin:0;text-decoration:none;text-transform:uppercase;" target="_blank">
                                <span style="letter-spacing: 2px;">
                                    {{- 'J\'y vais !' -}}
                                </span>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}
