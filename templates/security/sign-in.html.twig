{% extends 'base.html.twig' %}

{% block empty_content %}
    <section>
        <div class="container">
            <div class="row mt-5 d-flex justify-content-center">
                <div class="col-md-5 text-center">
                    <h4 class="mb-4">Connecte toi pour voir les photos !</h4>
                    <form action="{{ path('sign_in') }}" method="post">
                        <div class="form-group">
                            <input type="email" class="form-control" id="username" placeholder="Email" name="_username" value="{{ last_username }}" required>
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" id="password" placeholder="Mot de passe" name="_password" required>
                        </div>

                        {% if error %}
                            <p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        {% endif %}
                        <div class="form-row">
                            <div class="form-group col">
                                <button type="submit" class="btn btn-primary btn-block">Connexion</button>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col">
                                <p class="text-right">
                                    <a href="{{ path('register') }}">Je n'ai pas de compte.</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
