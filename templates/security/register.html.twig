{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block empty_content %}
    <section>
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-6 offset-md-3">
                    <h4 class="text-center mb-4">Formulaire d'inscription</h4>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'} })  }}
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_widget(form.firstName) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_widget(form.lastName) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_widget(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>
                        <div class="form-group col-md-6 d-flex align-items-center justify-content-center">
                            <em>Pour vérifier que c'est bien toi :)</em>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_widget(form.plainPassword.first) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_widget(form.plainPassword.second) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            {{ form_widget(form.newsletter) }}
                            {{ form_errors(form.newsletter) }}
                        </div>
                    </div>
                    {{ form_errors(form) }}
                    <div class="form-row">
                        <div class="form-group col">
                            <button type="submit" class="btn btn-primary btn-block">Je m'inscris !</button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col">
                            <p class="text-right">
                                <a href="{{ path('sign_in') }}">J'ai déjà un compte.</a>
                            </p>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
