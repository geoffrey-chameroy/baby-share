{% extends 'admin/base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title 'Admin - Edition de photos' %}

{% block breadcrumb %}
    <header class="content__title">
        <h1>Edition de photos</h1>
        <small>Les modifications seront en ligne d√®s l'enregistrement.</small>
    </header>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Informations de la photo</h4>
            <div class="row">
                <div class="col-md-6">
                    <img class="img-fluid" src="{{ path('photo_view', {'id': photo.id}) }}" />
                </div>
                <div class="col-md-6">
                    {{ form_start(form)  }}
                    {{ form_widget(form) }}
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
